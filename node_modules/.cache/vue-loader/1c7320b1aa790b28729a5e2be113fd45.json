\n      username: '',\n      password: '',\n    };\n  },\n  methods: {\n    async login() {\n      try {\n        const response = await fetch('http://localhost:3000/login', {\n          method: 'POST',\n          headers: {\n            'Content-Type': 'application/json',\n          },\n          body: JSON.stringify({\n            username: this.username,\n            password: this.password,\n          }),\n        });\n\n        const data = await response.json();\n\n        if (data.success) {\n          // Si el login es exitoso, redirige al dashboard según tipo de usuario\n          if (data.tipo_usuario === 'medico') {\n            this.$router.push('/medico-dashboard');\n          } else if (data.tipo_usuario === 'celador') {\n            this.$router.push('/celador-dashboard');\n          }\n        } else {\n          alert('Credenciales incorrectas');\n        }\n      } catch (error) {\n        console.error('Error de conexión', error);\n      }\n    },\n  },\n};\n</script>\n\n<style scoped>\n/* Aquí puedes agregar estilos para el formulario */\n</style>\n"]}]}